{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "eu-central-1",
        "ami_extension":  "my-custom-extension-server"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "airflow-server-packer-{{user `ami_extension`}}",
            "instance_type": "t2.small",
            "region": "{{user `region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami": "ami-0cc0a36f626a4fdf5",
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "./scripts/common/init.sh"
        },
        {
            "type": "shell",
            "script": "./scripts/server/mysql.sh"
        },
        {
            "type": "shell",
            "script": "./scripts/server/rabbitmq.sh"
        },
        {
            "type": "shell",
            "script": "./scripts/server/init_airflow.sh"
        },
        {
            "type": "file",
            "source": "./files/server/airflowserver.conf",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "file",
            "source": "./files/server/airflowscheduler.conf",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "file",
            "source": "./files/server/airflowflower.conf",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline":[
                "sudo mv /home/ubuntu/airflowserver.conf /etc/supervisor/conf.d/airflowserver.conf",
                "sudo mv /home/ubuntu/airflowscheduler.conf /etc/supervisor/conf.d/airflowscheduler.conf",
                "sudo mv /home/ubuntu/airflowflower.conf /etc/supervisor/conf.d/airflowflower.conf",
                "sudo mkdir /var/log/airflow",
                "sudo supervisorctl reread",
                "sudo supervisorctl update"
            ]
        }
    ]
}