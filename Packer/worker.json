{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "eu-central-1",
        "ami_extension":  "my-custom-extension-worker"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "airflow-server-packer-{{user `ami_extension`}}",
            "instance_type": "t2.small",
            "region": "{{user `region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami": "ami-0cc0a36f626a4fdf5",
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "./scripts/common/init.sh"
        },
        {
            "type": "shell",
            "script": "./scripts/worker/mysql.sh"
        },
        {
            "type": "shell",
            "script": "./scripts/worker/init_airflow.sh"
        },
        {
            "type": "file",
            "source": "./files/worker/airflowworker.conf",
            "destination": "/etc/supervisor/conf.d/"
        },
        {
            "type": "shell",
            "inline":[
                "sudo supervisorctl reread",
                "sudo supervisorctl update"
            ]
        }
    ]
}